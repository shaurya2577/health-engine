# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=resourcedatabase
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# JWT Secret (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random

# Admin Password (will be hashed)
ADMIN_PASSWORD=your_secure_admin_password_here

# Server Configuration
PORT=3002
NODE_ENV=production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Airtable Configuration
# Get these from https://airtable.com/create/tokens and your base URL
AIRTABLE_PAT=your_airtable_personal_access_token_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# Security Configuration
# Generate a strong JWT secret (at least 32 characters)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random_at_least_32_characters

# Admin Password (will be hashed)
ADMIN_PASSWORD=your_secure_admin_password_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

